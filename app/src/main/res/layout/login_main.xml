<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:weightSum="1">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical"
            android:paddingTop="@dimen/_20sdp"
            android:layout_margin="@dimen/_10sdp"

            android:layout_weight="0.88">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"

                android:layout_weight="5"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_5sdp">


                <EditText
                    android:id="@+id/edit_usernm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"

                    android:background="@drawable/square_border_edittext"
                    android:drawableLeft="@drawable/baseline_account_circle_black_18dp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:elegantTextHeight="false"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center|left"
                    android:hint="UserName"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/_13sdp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:id="@+id/edt_pass"
                    android:layout_gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:hint="Password"
                    android:gravity="center|left"
                    android:textSize="@dimen/_13sdp"
                    android:background="@drawable/square_border_edittext"
                    android:drawableLeft="@drawable/baseline_lock_open_black_18dp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:fontFamily="sans-serif-light"
                    android:elegantTextHeight="false"
                    android:layout_marginBottom="@dimen/_20sdp"

                    android:inputType="textPassword"
                    android:drawablePadding="@dimen/_11sdp"

                    android:textColor="@android:color/black"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColorHint="@android:color/darker_gray"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Forgot Password ?"
                    android:textColor="@android:color/black"
                    android:id="@+id/frgt"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_40sdp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@color/colorAccent"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:id="@+id/bt_login"
                    android:text="Submit" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="0.7"
                android:weightSum="1"
                android:id="@+id/redister_lay">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't Have An account?"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"

                    android:textColor="@android:color/black"
                    android:id="@+id/txt"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:layout_gravity="right"
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="here"
                    android:textColorLink="@color/colorAccent"
                    android:layout_gravity="right"
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:textColor="@android:color/black"
                    android:id="@+id/txtregister" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="                                      Or Sign In With"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="right"



                    android:id="@+id/textView" />


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="#0067b6"
        android:layout_centerInParent="true" />



  >

</RelativeLayout>