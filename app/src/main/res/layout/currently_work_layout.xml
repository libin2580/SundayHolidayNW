<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:text="Currently Working" />
    <RadioGroup
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/radioworking"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/workingNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO"
            android:textSize="@dimen/_11sdp"/>

        <RadioButton
            android:id="@+id/workingYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YES"
            android:textSize="@dimen/_11sdp"/>


    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"

        android:text="From Date" />
    <EditText
        android:id="@+id/edt_from_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:ems="10"
        android:paddingLeft="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:editable="false"
        android:clickable="true"
        android:focusable="false"
        android:layout_margin="@dimen/_5sdp"
        android:inputType="textPersonName"
        android:background="@drawable/square_border_edittext"
        android:hint="From Date" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"

        android:text="To Date" />
    <EditText
        android:id="@+id/edt_to_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:ems="10"
        android:paddingLeft="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:editable="false"
        android:clickable="true"
        android:focusable="false"
        android:layout_margin="@dimen/_5sdp"
        android:inputType="textPersonName"
        android:background="@drawable/square_border_edittext"
        android:hint="to date" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"

        android:text="Experince" />
    <EditText
        android:id="@+id/edt_experince"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:ems="10"
        android:paddingLeft="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"

        android:layout_margin="@dimen/_5sdp"
        android:inputType="textPersonName"
        android:background="@drawable/square_border_edittext"
        android:hint="4" />
</LinearLayout>